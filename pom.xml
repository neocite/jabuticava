<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>br.com.objectos</groupId>
		<artifactId>parent</artifactId>
		<version>1.0</version>
	</parent>
	<artifactId>way-duplicata</artifactId>
	<version>1.0</version>
	<packaging>pom</packaging>
	<name>objectos :: way :: duplicata</name>
	<description>Geração de duplicatas. Simples.</description>
	<url>https://github.com/objectos/way-duplicata</url>
	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<scm>
		<connection>scm:git:git://objectos/way-duplicata.git</connection>
		<developerConnection>scm:git:git@github.com:objectos/way-duplicata.git</developerConnection>
		<url>https://github.com/objectos/way-duplicata</url>
	</scm>
	<developers>
		<developer>
			<id>moe</id>
			<name>Marcio Endo</name>
			<email>marcio.endo@objectos.com.br</email>
		</developer>
		<developer>
			<id>eanschau</id>
			<name>Edenir Norberto Anschau</name>
			<email>edenir.anschau@objectos.com.br</email>
		</developer>
	</developers>
	<modules>
		<module>way-duplicata-core</module>
	</modules>
	<properties>
		<br.com.objectos.way-base.version>1.1</br.com.objectos.way-base.version>
		<org.codehaus.jackson.version>1.9.0</org.codehaus.jackson.version>
		<org.lesscss.version>1.3.3</org.lesscss.version>
	</properties>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>br.com.objectos</groupId>
				<artifactId>way-base</artifactId>
				<version>${br.com.objectos.way-base.version}</version>
			</dependency>
			<dependency>
				<groupId>com.github.spullara.mustache.java</groupId>
				<artifactId>compiler</artifactId>
				<version>${mustache.java.version}</version>
			</dependency>
			<dependency>
				<groupId>org.lesscss</groupId>
				<artifactId>lesscss</artifactId>
				<version>${org.lesscss.version}</version>
				<exclusions>
					<exclusion>
						<groupId>commons-logging</groupId>
						<artifactId>commons-logging</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>org.codehaus.jackson</groupId>
				<artifactId>jackson-core-asl</artifactId>
				<version>${org.codehaus.jackson.version}</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>org.codehaus.jackson</groupId>
				<artifactId>jackson-mapper-asl</artifactId>
				<version>${org.codehaus.jackson.version}</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>com.itextpdf</groupId>
				<artifactId>itextpdf</artifactId>
				<version>5.1.3</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>com.itextpdf.tool</groupId>
				<artifactId>xmlworker</artifactId>
				<version>1.1.1</version>
				<scope>test</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>